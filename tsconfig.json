{
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": ["./src/**/__tests__", "./src/**/*.test.ts"],
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "types": ["vitest/globals"],
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  }
}
