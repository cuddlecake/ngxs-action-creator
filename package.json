{
  "name": "ngxs-action-creator",
  "version": "0.1.0",
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/cuddlecake/ngxs-action-creator",
  "main": "./dist/ngxs-action-creator.umd.js",
  "module": "./dist/ngxs-action-creator.es.js",
  "exports": {
    ".": {
      "import": "./dist/ngxs-action-creator.es.js",
      "require": "./dist/ngxs-action-creator.umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": "> 14"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "install-peers",
    "build": "vite build && tsc --emitDeclarationOnly",
    "clean": "rm -rf dist node_modules",
    "type:check": "tsc --noEmit",
    "format": "prettier \"src/**/*.ts\" --write",
    "format:check": "prettier \"src/**/*.ts\" --check",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:check": "vitest run",
    "spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\"",
    "check": "yarn build && yarn type:check && yarn lint:check && yarn test:check && yarn spell:check",
    "cz": "cz",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "@ngxs/store": ">=2.0",
    "typescript": ">=4.1.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^8.0.4",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.31.0",
    "c8": "^7.11.3",
    "commitizen": "^4.2.4",
    "cspell": "^6.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "install-peers-cli": "^2.2.0",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.3",
    "typescript": "4.1.2",
    "vite": "^2.9.9",
    "vitest": "^0.13.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "volta": {
    "node": "16.15.0",
    "yarn": "1.22.18"
  }
}
